<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient4"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dcn"
                android:text="Data          Communication Networks"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                />
            <Button
                android:id="@+id/daa"
                android:text="Design And              Analysis Of         Algorithms"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:background="@drawable/buttonborder"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/toc"
                android:text="Theory Of           Computation"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/es1"
                android:text="Employability                   Skill I"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/la"
                android:text="Linux                                           Administration"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/jit"
                android:text="Java And Internet Technology"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/adbms"
                android:text="Advanced             Database           Management              System "
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:background="@drawable/buttonborder"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/edc"
                android:text="Entrepreneurship"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttonborder"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nces"
                android:text="Non Conventional Energy Sources"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:background="@drawable/buttonborder"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>